@model IEnumerable<AgileApp.DataTransferObject.Responses.Team.GetTeamDisplayResponse>

<style>

    #teamCard{
        margin: 10px;
    }    
    #teamCard:hover {
        background-color: lightgrey;
        border-color: grey;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
    }

    .card {
        width: 18rem;
        margin: 10px; /* İstenilen boşluğu ayarlayabilirsiniz */
    }
</style>

<div class="card-container">
    @foreach (var team in Model)
    {
        <a id="teamCard" class="btn card" style="width: 18rem;" asp-action="ShowUserWithTeams" asp-controller="Team" asp-route-teamId="@team.Id">
            <div class="card-body">
                <h5 class="card-title">Team: @team.Name</h5>
                <p class="card-text">Description: @team.Description</p>
                <p class="card-text">Description: @team.Id</p>
            </div>
        </a>
    }
</div>

